# .streamlit/secrets.toml
# ──────────────────────

# GOOGLE OAUTH2
[oauth2]
client_id     = "your-google-client-id.apps.googleusercontent.com"
client_secret = "your-google-client-secret"
authorize_url = "https://accounts.google.com/o/oauth2/v2/auth"
token_url     = "https://oauth2.googleapis.com/token"
redirect_uri  = "https://your-app.streamlit.app"  # or localhost for local testing
scope         = ["openid", "email", "profile"]

# STREAMLIT-AUTHENTICATOR COOKIE
[cookie]
name        = "ask_admin_cookie"
key         = "a-very-long-random-cookie-key"
expiry_days = 30

# (Optional) Pre-authorized user list, if you ever want it:
[credentials]
users = {}
